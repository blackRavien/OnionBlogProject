            <p><a href="tel:+900000000000">+90 674 876 7867</a></p>
        </div>
        <div class="col-md-4 text-center mb-4">
        <h4>Email</h4>
            <p><a href="mailto:mrtsvm569@gmail.com">mrtsvm569@gmail.com</a></p>
            <p><a href="mailto:administrator@gmail.com">administrator@gmail.com</a></p>
            <p><a href="mailto:mert.sevim@ba.com">mert.sevim@ba.com</a></p>
        </div>
        <div class="col-md-4 text-center mb-4">
            <h4>Adres</h4>
            <p>Bilge Adam Akademi Kadıköy Şube, İstanbul/TÜRKİYE</p>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6023.354846742492!2d29.013791849605596!3d40.98854385190713!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab98565932cb9%3A0xafaaa9dbc4bf05ab!2sBilgeAdam%20Akademi%20Kad%C4%B1k%C3%B6y!5e0!3m2!1str!2str!4v1728816300903!5m2!1str!2str"
                    width="300" height="180" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
</div>






@if (TempData["SuccessMessage"] != null)
{
    <script>
        $(document).ready(function() {
            alert('@TempData["SuccessMessage"]');
        });
    </script>
}
