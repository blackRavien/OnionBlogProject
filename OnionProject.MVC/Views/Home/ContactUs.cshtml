@{
    Layout = ViewData["Layout"]?.ToString() ?? "~/Views/Shared/_Layout.cshtml";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<form asp-action="SubmitContactMessage" asp-controller="Contact" method="post">
    <div class="form-group">
        <label for="name">İsim</label>
        <input type="text" class="form-control" id="name" name="Name" placeholder="Adınızı girin">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="Email" placeholder="Email adresinizi girin">
    </div>
    <div class="form-group">
        <label for="message">Mesajınız</label>
        <textarea class="form-control" id="message" name="Message" rows="5" placeholder="Mesajınızı yazın"></textarea>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-lg mt-3">Gönder</button>
    </div>
</form>


    <div class="row mt-5">
        <div class="col-md-4">
            <h4>Telefon</h4>
            <p><a href="tel:+900000000000">+90 000 000 0000</a></p>
        </div>
        <div class="col-md-4">
            <h4>Email</h4>
            <p><a href="mailto:info@example.com">info@example.com</a></p>
        </div>
        <div class="col-md-4">
            <h4>Adres</h4>
            <p>123 Sokak, Şehir, Ülke</p>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6023.354846742492!2d29.013791849605596!3d40.98854385190713!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab98565932cb9%3A0xafaaa9dbc4bf05ab!2sBilgeAdam%20Akademi%20Kad%C4%B1k%C3%B6y!5e0!3m2!1str!2str!4v1728816300903!5m2!1str!2str" width="300" height="180" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</div>

<style>
    .container {
        font-family: 'Arial', sans-serif;
        padding: 50px 15px;
    }

    .form-control {
        border-radius: 0;
    }

    .btn {
        border-radius: 0;
    }

    h2, h4 {
        color: #333;
    }

    a {
        color: #007bff;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        $(document).ready(function() {
            alert('@TempData["SuccessMessage"]');
        });
    </script>
}
@if (TempData["ErrorMessage"] != null)
{
    <script>
        $(document).ready(function() {
            alert('@TempData["ErrorMessage"]');
        });
    </script>
}
