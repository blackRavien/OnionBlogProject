@{
    Layout = ViewData["Layout"]?.ToString() ?? "~/Views/Shared/_Layout.cshtml";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<style>
    body {
        background-color: #eab676;
    }

    .container {
        font-family: 'Arial', sans-serif;
        padding: 20px 15px;
    }

    .row {
        margin-top: 0px; /* Fazladan boşluğu kaldır */
    }

    .btn {
        border-radius: 5px;
    }

    h2, h4 {
        color: #333;
        letter-spacing: 1px;
        border-bottom: 3px solid #21130d;
        display: inline-block;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    .form-group {
        margin-bottom: 15px;
    }

    /* Ekstra boşluğu kaldırmak için form ve iletişim bilgileri arasındaki container'ı hizala */
    .contact-section, .contact-info {
        background-color: #f5f5dc;
        border-radius: 15px;
        padding: 20px;
        margin-top: 0;
    }

        /* Boşlukları azaltmak ve hizalamak için */
        .contact-info h2 {
            margin-bottom: 10px;
        }

        .contact-info p {
            margin-bottom: 5px;
        }

    .text-center iframe {
        border-radius: 15px;
    }

    h4{
        font-weight: bold; 
        color: #333;"
    }
</style>


    <!-- Bize Ulaşın Formu -->
    <div class="contact-section">
        <h2 style="font-weight: bold; color: #333;">Bize Ulaşın</h2>
        <form asp-action="SubmitContactMessage" asp-controller="Contact" method="post">
            <div class="form-group">
                <label for="name">İsim</label>
                <input type="text" class="form-control" id="name" name="Name" placeholder="Adınızı girin">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="Email" placeholder="Email adresinizi girin">
            </div>
            <div class="form-group">
                <label for="message">Mesajınız</label>
                <textarea class="form-control" id="message" name="Message" rows="5" placeholder="Mesajınızı yazın"></textarea>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg mt-3">Gönder</button>
            </div>
        </form>
    </div>

    <!-- İletişim Bilgileri -->
<div class="contact-info row mt-4 p-4">
        <div class="col-md-4 text-center mb-4">
        <h4>Telefon</h4>
