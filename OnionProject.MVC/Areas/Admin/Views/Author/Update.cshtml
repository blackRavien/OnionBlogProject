@model UpdateAuthorDTO

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Yazar Güncelleme</h2>
                </div>
                <div class="card-body p-4">
                    <form action="https://localhost:7225/Admin/Author/Update" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <!-- First Name -->
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label fw-bold">Ad</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <!-- Last Name -->
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label fw-bold">Soyad</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <!-- Image -->
                        <div class="mb-3">
                            <label asp-for="Image" class="form-label fw-bold">Resim Yükle</label>
                            <input type="file" asp-for="Image" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <!-- Status -->
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-bold">Durum</label>
                            <select asp-for="Status" class="form-select">
                                <option value="0">Pasif</option>
                                <option value="1">Aktif</option>
                            </select>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">E-posta</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Phone Number -->
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-bold">Telefon Numarası</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <!-- Biography -->
                        <div class="mb-3">
                            <label asp-for="Biography" class="form-label fw-bold">Biyografi</label>
                            <textarea asp-for="Biography" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Biography" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5 mt-3">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
