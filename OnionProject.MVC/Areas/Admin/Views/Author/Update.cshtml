@model UpdateAuthorDTO

<style>
    body {
        background-color: #1a1d22; /* Gri arka plan */
        color: #333; /* Metin rengi */
    }

    .cover-image {
        width: 100%; /* Resmin genişliği %100 */
        height: 400px; /* Resmin yüksekliği */
        object-fit: cover; /* Resmin içeriği kaplaması için */
        border-radius: 8px; /* Kenar yuvarlama */
        height: 550px;
    }

    .container {
        background-color: #525d5f; /* Açık gri arka plan */
        border-radius: 8px; /* Köşeleri yuvarlak */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Hafif gölge */
        padding: 20px; /* İç boşluk */
        margin-bottom: 20px; /* Dış boşluk */
    }

    h4, h2, p, label{
        color: #d6d6d6;
    }

    .form-control {
        border-radius: 20px; /* Yuvarlak kenarlar */
    }

    .btn-primary {
        background-color: #007bff; /* Buton arka plan rengi */
        border-color: #007bff; /* Buton kenar rengi */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Buton hover rengi */
            border-color: #0056b3; /* Buton hover kenar rengi */
        }

    .card {
        background-color: #333c3d;
        border: none; /* Kart kenarını kaldır */
        border-radius: 8px; /* Yuvarlak köşeler */
    }

        .card .card-title {
            color: #0056b3; /* Kart başlık rengi */
        }

    

</style>


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header text-white text-center">
                    <h2>Yazar Güncelleme</h2>
                </div>
                <div class="card-body p-4">
                    <form action="https://localhost:7225/Admin/Author/Update" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <!-- First Name -->
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label fw-bold">Ad</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <!-- Last Name -->
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label fw-bold">Soyad</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <!-- Image -->
                        <div class="mb-3">
                            <label asp-for="Image" class="form-label fw-bold">Resim Yükle</label>
                            <input type="file" asp-for="Image" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">E-posta</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Phone Number -->
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-bold">Telefon Numarası</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <!-- Biography -->
                        <div class="mb-3">
                            <label asp-for="Biography" class="form-label fw-bold">Biyografi</label>
                            <textarea asp-for="Biography" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Biography" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5 mt-3">Güncelle</button>
                            
                        </div>
                    </form>
                    <button type="button" class="btn btn-secondary" onclick="history.back()">Geri Dön</button>
                </div>
            </div>
        </div>
    </div>
</div>
