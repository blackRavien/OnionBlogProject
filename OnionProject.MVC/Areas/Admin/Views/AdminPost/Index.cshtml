@model List<GetPostsVm>
@{
    ViewBag.Title = "Gönderiler";
}

<style>
    body {
        background-color: #1a1d22; /* Gri arka plan */
        color: #333; /* Metin rengi */
    }

    .container {
        background-color: #525d5f; /* Açık gri arka plan */
        border-radius: 8px; /* Köşeleri yuvarlak */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Hafif gölge */
        padding: 20px; /* İç boşluk */
        margin-bottom: 20px; /* Dış boşluk */
    }

    h4, h2, p, th, td{
        color: #d6d6d6;
    }

    

    .btn-primary {
        background-color: #007bff; /* Buton arka plan rengi */
        border-color: #007bff; /* Buton kenar rengi */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Buton hover rengi */
            border-color: #0056b3; /* Buton hover kenar rengi */
        }

    .card {
        background-color: #f5f5dc;
        border: none; /* Kart kenarını kaldır */
        border-radius: 8px; /* Yuvarlak köşeler */
    }

   
    
</style>


    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-center">Gönderiler Listesi</h2>
        <a href="https://localhost:7225/Admin/AdminPost/Create" class="btn btn-primary">Yeni Gönderi Oluştur</a>
    </div>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Başlık</th>
                <th scope="col">Yazar</th>
                <th scope="col">Kategori</th>
                <th scope="col">Oluşturulma Tarihi</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <td>@post.Title</td>
                    <td>@post.AuthorFullName</td>
                    <td>@post.GenreName</td>
                    <td>@post.CreatedDate.ToString("dd MMM yyyy")</td>
                    <td>
                        <a href="https://localhost:7225/Admin/AdminPost/Details/@post.Id" class="btn btn-info btn-sm mr-1">Detaylar</a>
                        <a href="https://localhost:7225/Admin/AdminPost/Update/@post.Id" class="btn btn-warning btn-sm mr-1">Düzenle</a>
                        <form action="https://localhost:7225/Admin/AdminPost/Delete/@post.Id" method="post" style="display:inline;" onsubmit="return confirm('Silmek istediğinize emin misiniz?');">
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
<a href="https://localhost:7225/Admin/AdminMain/Index" class="btn btn-dark">Geri Dön</a>
