@model ProfileUpdateDTO

<h2>Profili Düzenle</h2>

<div class="profile-container" style="background-color: #525d5f;">
    <form asp-action="EditProfile" asp-controller="UserPost" method="post" enctype="multipart/form-data">
        <table class="profile-table">
            <tr>
                <td>
                    <strong>İsim:</strong>
                    <input asp-for="FirstName"  class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span> <!-- Doğrulama mesajı -->
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Soyisim:</strong>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span> <!-- Doğrulama mesajı -->
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Kullanıcı Adı:</strong>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span> <!-- Doğrulama mesajı -->
                </td>
            </tr>
            <tr>
                <td>
                    <strong>E-posta:</strong>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span> <!-- Doğrulama mesajı -->
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Parola:</strong>
                    <input asp-for="Password" class="form-control" />
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Telefon Numarası:</strong>
                    <input asp-for="PhoneNumber" class="form-control" />
                </td>
            </tr>
           
        </table>

        <div class="button-group">
            <button type="submit" class="btn btn-success">Kaydet</button>
            <a asp-action="Profile" asp-controller="UserPost" class="btn btn-danger">İptal</a>
        </div>
    </form>
</div>

<style>
    body {
        background-color: #1a1d22; /* Krem rengi arka plan */
        color: #333; /* Metin rengi */
    }
    .profile-container {
        background-color: #f5f5dc;
        max-width: 600px;
        margin: auto;
        padding: 20px;
        
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h4, h2, p, label {
        color: #d6d6d6;
    }

    .profile-table {
        width: 100%;
        border-collapse: collapse;
    }

        .profile-table td {
            padding: 10px;
            vertical-align: top;
        }

    

    .button-group {
        margin-top: 20px;
        text-align: right;
    }

    .btn {
        margin-left: 10px;
    }
</style>
